{
  "exclude": ["node_modules", ".vscode", ".tmp", "public"],
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@helpers": ["src/helpers/index.ts"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@articles/*": ["src/pages/articles/*"],
      "@store/*": ["src/store/*"],
    },
  },
}

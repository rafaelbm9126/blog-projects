---
import Layout from "@layouts/Layout.astro";
import ListTagDetail from "@components/ListTagDetail.astro";
import ListArticlesDetail from "@components/ListArticlesDetail.astro";

import data from "@data/general";
---

<Layout title={data.title} description={data.description} keywords={data.keywords}>
  <div class="flex">
    <aside
      class="hidden h-full max-h-screen min-w-[280px] max-w-[280px] flex-wrap overflow-auto rounded bg-gray-50 pt-5 shadow-md dark:bg-gray-900/70 dark:shadow-gray-800/40 sm:flex"
    >
      <div class="px-6 py-4">
        <h3 class="font-bold uppercase text-pink-500">All Tags</h3>
        <ListTagDetail tags={data.tags} />
      </div>
    </aside>
    <section class="ml-0 w-full sm:ml-8">
      <ListArticlesDetail articles={data.articles} />
    </section>
  </div>
</Layout>

<style></style>
